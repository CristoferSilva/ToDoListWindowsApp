<Window x:Class="ToDoListWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFAEAEB2" Offset="0.096"/>
                <GradientStop Color="#FFE5E5EA" Offset="1"/>
                <GradientStop Color="#FFFBFBFB" Offset="0.569"/>
            </LinearGradientBrush>
        </Grid.Background>



        <Border Margin="514,25,514,577" Height="127" Width="252" VerticalAlignment="Top">
            <Image Source="Views/Images/TitleIMG.png"  Stretch="UniformToFill"/>
        </Border>


        <Border Background="#b71c1c" CornerRadius="10" Width="730" Height="430">
            <ListView ItemsSource="{Binding TasksList}" Width="720" Height="410" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"  SelectedItem="{Binding SelectedTask}">
                <ListView.ItemTemplate >
                    <DataTemplate>

                        <Grid x:Name="TaskApresentation" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="50" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="CheckBoxTask" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsChecked, Mode=TwoWay}"/>

                            <TextBlock Margin="20,0,0,0" x:Name="TaskTitle" Grid.Column="1" VerticalAlignment="Center"  Width="Auto" Foreground="#ffffff">
                                <Run Text="Title: " FontSize="20"/>
                                <Run Text="{Binding Title, Mode=TwoWay}" FontSize="15"/>
                            </TextBlock>

                            <TextBlock x:Name="TaskStartDate" Grid.Column="2" Margin="140,0,0,0" Width="Auto" VerticalAlignment="Top" Foreground="#ffffff">
                                <Run Text="Start Date: " FontSize="15"/>
                                <Run Text="{Binding StartDate, Mode=TwoWay, StringFormat= dd/mm/yyyy}" FontSize="10"/>
                            </TextBlock>

                            <TextBlock x:Name="TaskEndDate" Grid.Column="2" Margin="140,10,0,10" Width="Auto" VerticalAlignment="Bottom" Foreground="#ffffff">
                                <Run Text="End Date:  " FontSize="15"/>
                                <Run Text="{Binding EndDate, Mode=TwoWay, StringFormat= dd/mm/yyyy}" FontSize="10"/>
                            </TextBlock>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Border>

        <StackPanel x:Name="CeilButtonsStackPanel" Orientation="Horizontal"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="50">
            <Button Style="{DynamicResource ButtonStyle}" Content="Open List" FontSize="15" Padding="20" Foreground="#ffffff"/>
            <Button Style="{DynamicResource ButtonStyle}" Margin="30,0,30,0" Content="Refresh" FontSize="15" Padding="20" Foreground="#ffffff"/>
            <Button Style="{DynamicResource ButtonStyle}" Content="New Task" FontSize="15" Padding="20" Foreground="#ffffff" Command="{Binding AddNewTaskCommad}"/>
        </StackPanel>

    </Grid>
</Window>
