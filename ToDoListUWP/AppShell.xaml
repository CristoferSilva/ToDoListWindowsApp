<Page
    x:Class="ToDoListUWP.AppShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ToDoListUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Grid Background="#1C1C1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="appShellTitle" Grid.Row="0" Text="Changeable" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#F2F2F7" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" SelectionChanged="TextBlock_SelectionChanged"/>
        <Frame x:Name="RootFrame" Grid.Row="1" x:FieldModifier="public"/>
    </Grid>
  

</Page>
